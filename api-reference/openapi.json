            }
          }
        }
      },
      "post": {
        "description": "Creates a new loan in the customers lms instance",
        "requestBody": {
          "description": "loan to add to the lms",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Borrower"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "response",
            "content": {
